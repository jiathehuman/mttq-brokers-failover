# Child Broker 2 Configuration (Acts as Client to Parent)
listener 1883
allow_anonymous true

# Persistence configuration - limited retention for recent data
persistence true
persistence_location /mosquitto/data/
max_queued_messages 1000

# Logging configuration
log_dest file /mosquitto/log/mosquitto.log
log_dest stdout
log_type error
log_type warning
log_type notice
log_type information

# Connection settings
max_connections -1
max_inflight_messages 20

connection child2-to-parent
address mosquitto-parent:1883
topic # in 0 "" ""    # Subscribe to ALL topics from parent
topic # out 0 "" ""   # Publish ALL local topics to parent
bridge_attempt_unsubscribe false
bridge_protocol_version mqttv311
restart_timeout 10
keepalive_interval 30
cleansession false
notifications false
try_private true

# No bridges to other children - operate independently
